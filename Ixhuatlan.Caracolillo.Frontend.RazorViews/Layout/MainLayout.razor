@inherits LayoutComponentBase
@inject NavigationManager Navigation

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<div>
    <MudLayout>
        <MudButton OnClick="OnExpandCollapseClick">@(_expanded ? "Collapse" : "Expand")</MudButton>
        <MudCollapse Expanded="_expanded">
            <MudDrawer @bind-Open="_expanded" Elevation="25" Anchor="Anchor.Left">
                <MudDrawerHeader>
                    <MudText Typo="Typo.h6">
                        Caracolillo Café
                    </MudText>
                </MudDrawerHeader>
                <MudDrawerContainer >
                    <NavMenu/>
                </MudDrawerContainer>
            </MudDrawer>
        </MudCollapse>
        
        
        <MudMainContent>
            <article class="content px-4">
                @Body
            </article>
        </MudMainContent>
    </MudLayout>
</div>